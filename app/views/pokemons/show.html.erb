<body>
<div class="container">
    <div class="pokedex">
      <div class="top">
        <div class="color-buttons">
        <button class="blue-button"></button>
        <button class="red-button"></button>
        <button class="green-button"></button>
        <button class="yellow-button"></button>
      </div>
        <div class="screen">
            <h1><%= @pokemon.name %></h1>
            <img src=<%= @pokemon.image %> />
            <ul class="no-bullets">
                <li>Height <%= @pokemon.height %> </li>
                <li>Weight <%= @pokemon.weight %> </li>
                <li>Base Experience <%= @pokemon.base_experience %> </li>
            </ul>
        </div>
      </div>

      <%= form_with(method: :get) do |form| %>
      <div class="search">
        <%= form.text_field :name, placeholder: "Find Pokemon" %>
        <%= form.submit "Buscar", class: "Buscar" %>
      </div>
      <% end %>


    </div>
    <div class="back-case">
      <div class="topv2">

        </div>
    
    </div>
  </div>