<%= content_for :screen do %>
    <h1 class="pokemon-name"><%= @pokemon.name.capitalize %></h1>
    <img src=<%= @pokemon.image %> class="" />
<% end %>
<%= content_for :buttons do %>
    <%= form_with(url: pokemon_path(@pokemon.name), method: :get) do |form| %>
            <%= form.submit "", class: "strong-blue-button" %>
    <% end %>
    <button class="green-large-button" />
    <button class="yellow-large-button" />
<% end %>
<%= content_for :moves do %>
    <h1>Moves</h1>
    <%= render @moves %>
<% end %>
<%= render "pokemons/pokedex" %>